@model Fashion_Website.Models.SANPHAM
@{
    ViewBag.Title = "ThemSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Assets/js/previewFile.js"></script>
<style>
    .d-flex {
        display: flex;
    }

    .align-items-center {
        align-items: center;
    }

    .justify-content-center {
        justify-content: center;
    }

    input:focus {
        outline: none;
    }

    .link {
        width: 100%;
        height: 20px;
        margin: 50px 5px 5px 5px;
    }

        .link ul {
            width: 100%;
            list-style-type: none;
            display: flex;
        }

            .link ul a {
                text-decoration: none;
                font-weight: bold;
                font-size: 12px;
                color: #005574;
            }

                .link ul a i {
                    margin: 0 10px 0 10px;
                }

    .form h1 {
        border-radius: 4px 4px 0 0;
        padding: 10px 20px;
        margin: 0 0 25px 0;
        background-color: #005574;
        color: #fff;
        font-size: 18px;
        line-height: 22px;
    }

    .form {
        position: relative;
        background-color: #fff;
        border-radius: 4px;
        margin: 30px 30px 35px 30px;
        transition: box-shadow 200ms;
        width: 830px;
        height:700px;
        display: inline-block;
    }


        .form .form-input input {
            display: block;
            box-sizing: border-box;
            width: 230px;
            height: 2.3125rem;
            padding: 0.5rem;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        .form .form-input select {
            display: block;
            box-sizing: border-box;
            width: 230px;
            height: 2.3125rem;
            padding: 0.5rem;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        .form .form-input label {
            font-size: 0.875rem;
            font-weight: bold;
            line-height: 1.8;
            color: #636466;
            margin-left: 20px;
        }

        .form .form-input {
            margin-right: 10px;
            height: 80px;
        }
</style>

<div class="link">
    <ul>
        <li><a href="~/QuanLySanPham/DanhSachSanPham">Quản lý sản phẩm <i class="ti-angle-double-right">></i></a></li>
        <li><a href="~/QuanLySanPham/ThemSanPham">Thêm mới</a></li>
    </ul>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form form-horizontal">
    <h1>Thêm mới sản phẩm</h1>
    <div class="form-input form-group">
        <label for="MaSP">Mã sản phẩm</label>
        <div class="col-md-10">
            <input style="background:#ececec" name="MaSP" value="@{
                    String data = new Fashion_Website.Models.taoMa.taoMaSanPham().TaoMaSanPham();
                    @data
                }" readonly />
        </div>
    </div>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="TenSP">Tên sản phẩm</label>
        <div class="col-md-10">
            <input type="text" name="TenSP" />
        </div>
    </div>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="MaLoaiSP">Mã loại sản phẩm</label>
        <div class="col-md-10">
            <select name="MaLoaiSP">
                @foreach (var item in new Fashion_Website.Models.mapSanPham.mapSanPham().DanhSachLoaiSP())
                {
                    <option value="@item.MaLoaiSP">@item.MaLoaiSP (@item.MaLoaiSP)</option>
                }
            </select>
        </div>
    </div>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="GiaSP">Giá sản phẩm</label>
        <div class="col-md-10">
            <input type="text" name="GiaSP" />
        </div>
    </div>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="GiaSP">Tình trạng sản phẩm</label>
        <div class="col-md-10">
            <input type="number" name="TinhTrangSP" max="1" min="0" />
        </div>
    </div>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="HinhSP">Hình ảnh sản phẩm</label>
        <div class="col-md-10">
            <input type="File" id="file_Hinh" name="HinhSP" onchange="previewFile();">
        </div>
    </div>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="MoTa">Mô tả sản phẩm</label>
        <div class="col-md-10">
            <input type="text" name="MoTa" />
        </div>
    </div>
    <div class="form-input form-group">
        <label for="previewImg">Xem trước hình</label>
        <div class="col-md-10">
            <img id="target" class="img" src="#" alt="your image" style="width: 320px; height: 300px;" />
        </div>
    </div>
</div>
    <div class="d-flex align-items-center justify-content-center">
        <input type="submit" style="background: #005574; color: #ececec" value="THÊM" class="btn btn-default" />
    </div>
}
